<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:key="@string/idle_mode"
        android:title="@string/pref_title_idle_mode"
        android:summary="@string/pref_description_idle_mode"
        android:defaultValue="true" />
    <CheckBoxPreference
        android:key="@string/partial_mode"
        android:title="@string/pref_title_partial_mode"
        android:summary="@string/pref_description_partial_mode"
        android:defaultValue="true" />
    <ListPreference
        android:key="@string/ambient_brightness"
        android:title="@string/pref_title_ambient_br"
        android:defaultValue="-1"
        android:entries="@array/pref_ambient_br_list_titles"
        android:entryValues="@array/pref_ambient_br_list_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <CheckBoxPreference
        android:key="@string/touchwake"
        android:title="@string/pref_title_touchwake"
        android:summary="@string/pref_description_touchwake"
        android:defaultValue="true" />

    <ListPreference
        android:key="@string/vibrastrength"
        android:title="@string/pref_title_vibration_strength"
        android:defaultValue="-1"
        android:entries="@array/pref_vibration_strengthy_titles"
        android:entryValues="@array/pref_vibration_strength_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />
</PreferenceScreen>